# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[**.php]
indent_style = tab
indent_size = 2

[**.yaml]
indent_style = space
indent_size = 2

[**.yml]
indent_style = space
indent_size = 2

[**.md]
indent_style = space
indent_size = 2
